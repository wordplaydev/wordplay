{
    "name": "functions",
    "type": "module",
    "scripts": {
        "build": "npm upgrade shared-types && tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "predeploy": "npm --prefix functions run build",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "outdated": "npx check-outdated --ignore-pre-releases --columns name,type,current,latest,changes"
    },
    "engines": {
        "node": "^22.0.0"
    },
    "main": "lib/index.js",
    "dependencies": {
        "@google-cloud/translate": "^9",
        "@supercharge/promise-pool": "^3",
        "firebase-admin": "^13",
        "firebase-functions": "^7",
        "nodemailer": "^8",
        "shared-types": "file:./src/shared"
    },
    "devDependencies": {
        "@types/nodemailer": "^7",
        "firebase-functions-test": "^3",
        "typescript": "^5"
    },
    "private": true,
    "bundleDependencies": [
        "shared-types"
    ]
}
