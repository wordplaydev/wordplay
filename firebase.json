{
    "projects": {
        "default": "wordplay-dev",
        "dev": "wordplay-dev",
        "prod": "wordplay-prod"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ],
            "predeploy": ["npm run build"]
        }
    ],
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/function/getWebpage",
                "function": "getWebpage",
                "region": "us-central1"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5002
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}
